angular.module('Muber.directives')
  .directive('voucherTab', function() {
    return {
      restrict: 'E',
      replace: true,
      templateUrl: '<%= asset_path("shared/_voucherTab.html") %>',
      controller: function($scope, $element, $attrs) {
        $scope.selectedDeal = $scope.voucher.deals[0];
        $scope.section_click = function(deal) {
          $scope.selectedDeal = deal;
        }
      },
    }
  });
